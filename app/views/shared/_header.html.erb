<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Association Project", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "All events", events_path %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Main Menu <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "New Event", new_event_path %></li>
              <li><%= link_to "Invitations received(" + Invitation.where(accepted: false,user_id: current_user.id).count.to_s + ")", invitations_path %></li>
              <li><%= link_to "Invite users", new_invitation_path %></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign up", new_user_path %></li>
          <li><%= link_to "Log in", new_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
