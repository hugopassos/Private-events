<%= render "shared/error_messages", object: @event %>
<h1>New event</h1>
<%= form_for @event do |f| %>
	<%= f.label :title %>
	<br>
	<%= f.text_field :title %>
	<br><br>
	<%= f.label :description %>
	<br>
	<%= f.text_area :description %>
	<br><br>
	<%= f.label :date %>
	<br>
	<%= f.date_field :date %>
	<br><br>
	<%= f.submit "Create Event", class: 'btn btn-primary'%>
<% end %>
